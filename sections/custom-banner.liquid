<div class="custom-banner-wrapper" style="padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;">
  {% if section.settings.banner_image %}
    <div class="custom-banner-image" 
         style="
           background-image:url({{ section.settings.banner_image | img_url: 'master' }});
           opacity: {{ section.settings.image_opacity }};
           {% if section.settings.auto_height %}aspect-ratio: 16 / 9;{% else %}height: {{ section.settings.banner_height_desktop }}px;{% endif %}
         ">
    </div>
  {% endif %}
  <div class="custom-banner-text" 
       style="
         color: {{ section.settings.text_color }};
         font-size: {{ section.settings.text_size }}px;
         text-align: {{ section.settings.text_alignment }};
         padding: {{ section.settings.text_padding }}px;
       ">
    {{ section.settings.banner_text }}
  </div>
</div>

<style>
.custom-banner-image {
  width: 100%;
  background-size: cover;
  background-position: center;
}

@media (max-width: 768px) {
  .custom-banner-image {
    {% if section.settings.auto_height %}
      aspect-ratio: 4 / 5;
    {% else %}
      height: {{ section.settings.banner_height_mobile }}px;
    {% endif %}
    background-position: center top;
  }
}
</style>

