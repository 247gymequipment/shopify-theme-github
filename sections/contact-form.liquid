{%- style -%}
  /* Full-page background */
  body {
    background: linear-gradient(rgba(0, 0, 0, {{ section.settings.bg_opacity | times: 1 }}), 
                rgba(0, 0, 0, {{ section.settings.bg_opacity | times: 1 }})), 
                url('{{ section.settings.bg_image | default: "https://cdn.shopify.com/s/files/1/0756/3201/7681/files/Untitled_design2.png?v=1687238379" }}') 
                no-repeat center center / cover;
    background-attachment: fixed;
    margin: 0;
    padding: 0;
  }

  /* Contact Content Box */
  .contact-content {
    max-width: 800px;
    margin: 60px auto;
    padding: 40px;
    background: rgba(255, 255, 255, {{ section.settings.content_bg_opacity }});
    border-radius: 10px;
    text-align: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* Add spacing between address and form */
  .contact-info {
    margin-bottom: 40px;
  }

  /* Form Styling */
  .contact__fields {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .contact__fields .field {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .contact__fields .field label {
    font-size: 16px;
    font-weight: bold;
    color: {{ section.settings.label_color }};
    margin-bottom: 5px;
  }

  .contact__fields .field__input, 
  .contact__fields textarea {
    background: rgba({{ section.settings.input_bg_color.red }}, 
                     {{ section.settings.input_bg_color.green }}, 
                     {{ section.settings.input_bg_color.blue }}, 
                     {{ section.settings.input_bg_opacity }});
    color: {{ section.settings.input_text_color }};
    border: 2px solid {{ section.settings.input_border_color }};
    padding: 12px;
    border-radius: 6px;
    width: 100%;
    max-width: {{ section.settings.input_width }}px; /* Adjustable width */
    min-height: {{ section.settings.input_height }}px; /* Adjustable height */
    font-size: 16px;
    transition: all 0.3s ease-in-out;
  }

  .contact__fields .field__input:focus, 
  .contact__fields textarea:focus {
    border-color: {{ section.settings.input_focus_border }};
    outline: none;
    box-shadow: 0px 0px 5px {{ section.settings.input_focus_border }};
  }

  .contact__fields .field__input::placeholder, 
  .contact__fields textarea::placeholder {
    color: {{ section.settings.input_placeholder_color }};
    font-size: 14px;
  }

  /* Button Styling */
  .contact__button {
    text-align: center;
    margin-top: 20px;
  }

  .contact__button button {
    padding: 14px 25px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s;
    width: 100%;
    max-width: 300px;
  }

  .contact__button button:hover {
    background: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
  }
{%- endstyle -%}

