<style>
  /* Default styling for desktop */
  #cart-quote-container {
    margin-top: 15px;
    padding: 12px;
    background-color: #ffffff;
    border-radius: 5px;
    text-align: center;
  }

  #cart-quote-container p {
    font-size: 15px;
    margin-bottom: 12px;
  }

  #cart-quote-container a {
    display: inline-block;
    background-color: #61C5C0;
    color: white;
    padding: 10px 18px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    font-size: 15px;
  }

  #cart-quote-container hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 15px auto;
    width: 75%;
  }

  /* Mobile-specific adjustments */
  @media screen and (max-width: 768px) {
    #cart-quote-container {
      padding: 8px;
    }

    #cart-quote-container p {
      font-size: 13px;
      margin-bottom: 8px;
    }

    #cart-quote-container a {
      padding: 6px 12px;
      font-size: 12px;
      border-radius: 4px;
    }

    #cart-quote-container hr {
      margin: 12px auto;
      width: 70%;
    }
  }
</style>

<div id="cart-quote-container">
  <p style="color: #d9534f; font-weight: bold;">
    Shipping rates vary by location. Contact us for the best quote.
  </p>

  {% assign cart_items = "" %}
  {% assign cart_total_price = 0 %}

  {% for item in cart.items %}
    {% assign item_price = item.final_line_price | money_without_currency %}
    {% assign cart_items = cart_items | append: "- " | append: item.product.title | append: " (Qty: " | append: item.quantity | append: ", Price: $" | append: item_price | append: ")%0A" %}
    {% assign cart_total_price = cart_total_price | plus: item.final_line_price %}
  {% endfor %}

  {% assign cart_total_price_formatted = cart_total_price | money_without_currency %}

  {% assign whatsapp_message = "Hello, I would like to request a shipping quote for my order.%0A%0AItems in Cart:%0A" | append: cart_items | append: "%0A%0ATotal Price: $" | append: cart_total_price_formatted %}
